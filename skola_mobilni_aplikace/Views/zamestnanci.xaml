                HorizontalOptions="Center"
                Clicked="OnUcitele" />
            <Button Text="udrzbari"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnUdrzbari" />
            <Button Text="podpora"
                VerticalOptions="Center"
